{
  "cli": {
    "version": ">= 0.52.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "deploymentTarget": "15.1"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "deploymentTarget": "15.1"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "ios": {
        "autoIncrement": "buildNumber",
        "deploymentTarget": "15.1"
      },
      "android": {
        "autoIncrement": "versionCode"
      }
    }
  },
  "submit": {
    "production": {}
  }
}